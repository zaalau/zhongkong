/* pages/draw/index.wxss */
.drawContainer {
  position: relative;
  width: 100%;
}
.video {
  width: 100%;
  height: 100%;
  object-fit: fill;
}
.drawBtnContainer {
  background-size: 100% 100%;
  width: 368rpx;
  height: 175rpx;
  position: absolute;
  bottom: 120rpx;
  left: 188rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.drawBtn {
  background-size: 100% 100%;
  width: 300rpx;
  height: 100rpx;
  position: relative;
}
.giftContainer {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  animation-name: giftContainer;
  animation-duration: 2s;
  animation-delay: 2s;
  display: flex;
  justify-content: center;
  padding-top: 40%;
}
@keyframes giftContainer {
  from {opacity: 1;}
  to {opacity: 0;}
}

.giftText {
  color: #ffffff;
  text-shadow: 0 0 5px #ffa7ca;
  font-size: 50rpx;
  font-weight: bold;
  position: fixed;
  /* top: 660rpx;
  left: 210rpx; */
  width: 680rpx;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 110rpx;
  box-sizing: border-box;
  background-size: 100% 100%;
}
.workNumberContainer {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  display: flex;
  justify-content: center;
 padding-top: 50%;
}
.workNumberInputContainer {
  background-size: 100% 100%;
  width: 530rpx;
  height: 510rpx;
  position: relative;
}
.closeInput {
  background-size: 100% 100%;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 25rpx;
  top: 30rpx;
}
.workNumberInput {
  width: 75%;
  height: 62rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin: 200rpx auto 80rpx;
  padding: 3rpx 20rpx;
  font-size: 25rpx;
  box-sizing: border-box;
}
.workNumberBtn {
  background-size: 100% 100%;
  height: 72rpx;
  width: 190rpx;
  margin: 0 auto;
}
.prizeInfoContainer {
  color: #a1a1a1;
  position: absolute;
  bottom: 130rpx;
  width: 100%;
  font-size: 28rpx;
  box-sizing: border-box;
  
}
.prizeInfo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  box-sizing: border-box;
}
.workNumberInfo {
  margin-right: 20rpx;
}
.tips {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}
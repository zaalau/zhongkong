      <view class="seatAllPic" style="background-image: url('https://7a68-zhongkong-0gr2bnjw8020e857-1321404713.tcb.qcloud.la/%E5%B0%8F%E8%8E%B2%E8%8A%B1%E5%BA%A7%E4%BD%8D.jpg?sign=0a3b69923ed267ed462553721d60b975&t=1698813612');">

        <view class="district1-0" bindtap='preview' data-pic-src="{{xx[0]}}"></view>
        <view class="district1-1" bindtap='preview' data-pic-src="{{xx[0]}}"></view>
